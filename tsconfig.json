{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es6"
    ],
    "outDir": "dist",
    // "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "removeComments": false,
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*",
        "node_modules/*"
      ]
    },
    "typeRoots" : [
      "types/*",
      "node_modules/*"
    ],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.jade",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules/*",
    "types/*"
  ]
}
